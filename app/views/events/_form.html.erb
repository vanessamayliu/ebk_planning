<% was_validated = event.errors.any? %>

<%= form_with(model: event, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% nonprofit_class = "form-control" %>
    <% nonprofit_was_invalid = event.errors.include?(:nonprofit) %>

    <% if was_validated %>
      <% if nonprofit_was_invalid %>
        <% nonprofit_class << " is-invalid" %>
      <% else %>
        <% nonprofit_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :nonprofit_id %>
    <%= f.collection_select :nonprofit_id, Nonprofit.all, :id, :to_s, {}, class: "form-control" %>
    <% if nonprofit_was_invalid %>
      <% event.errors.full_messages_for(:nonprofit).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% event_date_class = "form-control" %>
    <% event_date_was_invalid = event.errors.include?(:event_date) %>

    <% if was_validated %>
      <% if event_date_was_invalid %>
        <% event_date_class << " is-invalid" %>
      <% else %>
        <% event_date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_date %>
    <%= f.date_select :event_date, class: event_date_class, placeholder: "Enter event date" %>
    <% if event_date_was_invalid %>
      <% event.errors.full_messages_for(:event_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% event_description_class = "form-control" %>
    <% event_description_was_invalid = event.errors.include?(:event_description) %>

    <% if was_validated %>
      <% if event_description_was_invalid %>
        <% event_description_class << " is-invalid" %>
      <% else %>
        <% event_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_description %>
    <%= f.text_area :event_description, class: event_description_class, placeholder: "Enter event description" %>
    <% if event_description_was_invalid %>
      <% event.errors.full_messages_for(:event_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-check">
    <% confirmed_class = "form-check-input" %>
    <% confirmed_was_invalid = event.errors.include?(:confirmed) %>

    <% if was_validated %>
      <% if confirmed_was_invalid %>
        <% confirmed_class << " is-invalid" %>
      <% else %>
        <% confirmed_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :confirmed, class: "form-check-label" do %>
      <%= f.check_box :confirmed, class: confirmed_class %> Confirmed
    <% end %>
    <% if confirmed_was_invalid %>
      <% event.errors.full_messages_for(:confirmed).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% number_volunteer_class = "form-control" %>
    <% number_volunteer_was_invalid = event.errors.include?(:number_volunteer) %>

    <% if was_validated %>
      <% if number_volunteer_was_invalid %>
        <% number_volunteer_class << " is-invalid" %>
      <% else %>
        <% number_volunteer_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :number_volunteers %>
    <%= f.number_field :number_volunteers, class: number_volunteer_class, placeholder: "Enter number volunteer" %>
    <% if number_volunteer_was_invalid %>
      <% event.errors.full_messages_for(:number_volunteer).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% event_time_range_class = "form-control" %>
    <% event_time_range_was_invalid = event.errors.include?(:event_time_range) %>

    <% if was_validated %>
      <% if event_time_range_was_invalid %>
        <% event_time_range_class << " is-invalid" %>
      <% else %>
        <% event_time_range_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_time_range %>
    <%= f.text_field :event_time_range, class: event_time_range_class, placeholder: "Enter event time range" %>
    <% if event_time_range_was_invalid %>
      <% event.errors.full_messages_for(:event_time_range).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% event_lead_class = "form-control" %>
    <% event_lead_was_invalid = event.errors.include?(:event_lead) %>

    <% if was_validated %>
      <% if event_lead_was_invalid %>
        <% event_lead_class << " is-invalid" %>
      <% else %>
        <% event_lead_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :event_lead %>
    <%= f.text_field :event_lead, class: event_lead_class, placeholder: "Enter event lead" %>
    <% if event_lead_was_invalid %>
      <% event.errors.full_messages_for(:event_lead).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
